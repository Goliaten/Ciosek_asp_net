@model IEnumerable<Kategoria>
@{
}
<ul class="nav navbar-nav">
@foreach (var kategoria in Model)
{
    <li><a href="@Url.Action("Lista", "Filmy", new{nazwaKategorii = kategoria.Nazwa})">@kategoria.Nazwa</a></li>
    }

<li><a href="@Url.Action("DodajFilm", "Filmy")">Dodaj Film</a></li>

