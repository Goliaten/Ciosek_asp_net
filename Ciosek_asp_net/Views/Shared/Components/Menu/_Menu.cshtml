{
    <li><a href="@Url.Action("Login", "Account")"> Zaloguj</a></li>
    <li><a href="@Url.Action("Register", "Account")">Zarejestruj</a></li>
}
else
{
    <li><a href="@Url.Action("Logout", "Account")"> Wyloguj @User.Identity.Name</a></li>
}
</ul>

